<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <div class="box" id="heading">
        <h1>
            <%= keyDay %>
        </h1>
    </div>

    <div class="box">
        
        <% newListItems.forEach(function(item){ %>

            <form action="/delete" method="post">               <!--  form to send data to delete checked items -->
                <div class="item">
                    <input type="checkbox" name="itemToDelete" value="<%=item._id%>" onchange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= keyDay %>"></input>
            </form>

        <% }) %>
            <form action="/" method="post" class="item">
                <input type="text" name="newItem" placeholder="Add here" autocomplete="off">
                <button type="submit" name="customList" value="<%=keyDay%>">+</button>
            </form>
    </div>



    
</body>

</html>